<resources>

    <!-- Base application theme. -->
    <style name="Base.SchoolHub" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_secondary</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
        <item name="colorControlHighlight">@color/color_secondary</item>
        <item name="colorControlActivated">@color/color_secondary</item>
    </style>

    <style name="Base.SchoolHub.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="Base.SchoolHub.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.SchoolHub.NoActionBar" parent="Base.SchoolHub">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.SchoolHub.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
