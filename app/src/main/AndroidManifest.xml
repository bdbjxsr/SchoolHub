<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.hub.school.schoolhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SchoolHubApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Base.SchoolHub.NoActionBar">
        <activity
            android:name=".view.activity.EntranceActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.AuthenticateActivity" />

        <activity android:name=".view.activity.MainActivity" />

        <activity android:name=".view.activity.MainNavigationViewActivity" />

        <activity
            android:name=".view.activity.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".view.activity.SignupActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".view.activity.DiscussionFormActivity" />

    </application>

</manifest>
